<div class="container">
  <div class="col-md-6 col-sm-10">

  <%= form_for(@tubuyaki, url: confirm_tubuyakis_path) do |f| %>

    <% if @tubuyaki.errors.any? %>
      <% @tubuyaki.errors.full_messages.each do |msg| %>
        <ul>
          <li><%= msg %></li>
        </ul>
      <% end %>
    <% end %>

    <p>つぶやき <%= f.text_field :content %> </p>
    <br>
    <%= f.submit "投稿" %>
  <% end %>

  </div>
</div>
