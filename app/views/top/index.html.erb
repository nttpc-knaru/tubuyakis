<div class="container">
  <div class="row">

    <div class="col-md-4 col-md-offset-1">
      <h3> プロフィール </h3>
      <p> ユーザ情報 </p>
      <p> パスワード </p>
    </div>

    <div class="col-md-4 col-md-offset-1">
      <h3> つぶやき一覧 </h3>
      <p><%= notice %></p>
      <% @tubuyakis.each do |tubuyaki| %>
        <p> <%= tubuyaki.content %> </p>
        <%= link_to "編集",edit_tubuyaki_path(tubuyaki.id),class: 'btn btn-sm btn-success' %>
        <%= link_to "削除",tubuyaki_path(tubuyaki.id), method: :delete,class: 'btn btn-sm btn-danger' %>
      <% end %>
    </div>

  </div>
</div>
